<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFCEB8"
    tools:context=".GeneralActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbargoodparenting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFFFF"
        android:elevation="1dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:navigationIcon="@drawable/backicon"
        app:subtitleTextAppearance="@style/TextAppearance.AppCompat.Display3"
        app:title="h e e d"
        app:titleMargin="8dp"
        app:titleMarginEnd="20dp"
        app:titleMarginStart="276dp"
        app:titleTextAppearance="@style/TextAppearance.AppCompat.Small"
        app:titleTextColor="#F7646666" />

    <RelativeLayout
        android:id="@+id/relmain"
        android:layout_width="match_parent"
        android:layout_height="251dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="310dp"
            android:elevation="40dp"
            android:outlineAmbientShadowColor="@color/colorskip"
            app:cardCornerRadius="30dp"
            app:cardPreventCornerOverlap="false">

            <RelativeLayout
                android:id="@+id/rel1"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:padding="10dp">


                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginEnd="66dp"
                    android:fontFamily="@font/didact_gothic"
                    android:text="Good Parenting:"
                    android:textColor="#666565"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView2"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/didact_gothic"
                    android:text="                           Fear, uncertainty, and being holed up at home to slow the spread of COVID-19 can make it tough for families to keep a sense of calm."
                    android:textColor="@color/colorskip"
                    android:textSize="17dp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="250dp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="1dp"
            android:fillViewport="false">


            <LinearLayout
                android:id="@+id/linerlayout"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_weight="1"
                app:layout_constraintTop_toTopOf=""
                android:padding="10dp"
                android:touchscreenBlocksFocus="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                >


            <androidx.cardview.widget.CardView
                    android:id="@+id/creativeplay"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:elevation="2dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="40dp"
                    app:cardPreventCornerOverlap="false">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp">

                        <ImageView
                            android:id="@+id/creativeplayimg"
                            android:layout_width="wrap_content"
                            android:layout_height="91dp"
                            android:layout_centerVertical="false"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="10dp"
                            app:srcCompat="@drawable/creativeplay" />

                        <TextView
                            android:id="@+id/creativeplaytxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/creativeplayimg"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="3dp"
                            android:fontFamily="@font/didact_gothic"
                            android:text="Creative PLay"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/understandfeeling"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:elevation="2dp"
                    app:cardCornerRadius="40dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp">

                        <ImageView
                            android:id="@+id/understandfeelingsimg"
                            android:layout_width="141dp"
                            android:layout_height="105dp"
                            android:layout_alignParentEnd="false"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="false"
                            android:layout_marginTop="20dp"
                            app:srcCompat="@drawable/feelings" />

                        <TextView
                            android:id="@+id/understandfeelingtxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/understandfeelingsimg"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="3dp"
                            android:fontFamily="@font/didact_gothic"
                            android:text="Understand Feelings"
                            android:textStyle="bold" />
                    </RelativeLayout>


                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linerlayout1"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_below="@id/linerlayout"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="10dp"
                android:touchscreenBlocksFocus="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linerlayout">

                <androidx.cardview.widget.CardView
                    android:id="@+id/hugs"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:elevation="2dp"
                    app:cardCornerRadius="40dp"
                    app:cardPreventCornerOverlap="false">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp">

                        <ImageView
                            android:id="@+id/hugsimg"
                            android:layout_width="wrap_content"
                            android:layout_height="91dp"
                            android:layout_centerVertical="false"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="10dp"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/givehugs" />

                        <TextView
                            android:id="@+id/hugstxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/hugsimg"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="3dp"
                            android:fontFamily="@font/didact_gothic"
                            android:text="Give Extra Hugs"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/deliciousfood"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:elevation="3dp"
                    app:cardCornerRadius="40dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp">

                        <ImageView
                            android:id="@+id/deliciousfoodimg"
                            android:layout_width="120dp"
                            android:layout_height="98dp"
                            android:layout_alignParentEnd="false"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="false"
                            android:layout_marginTop="23dp"
                            android:layout_marginBottom="0dp"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/food" />

                        <TextView
                            android:id="@+id/deliciousfoodtxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/deliciousfoodimg"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="3dp"
                            android:fontFamily="@font/didact_gothic"
                            android:text="Make delicious food"
                            android:textStyle="bold" />
                    </RelativeLayout>


                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linerlayout2"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_below="@id/linerlayout1"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linerlayout1">

                <androidx.cardview.widget.CardView
                    android:id="@+id/parentingreadcard"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_margin="10dp"
                    android:layout_marginStart="20dp"
                    android:background="#C8DD5858"
                    android:hapticFeedbackEnabled="true"
                    app:cardBackgroundColor="#DA9677"
                    app:cardCornerRadius="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="20dp">

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="80dp"
                            android:fontFamily="@font/didact_gothic"
                            android:scrollbarSize="10dp"
                            android:text="Read More?"
                            android:textSize="25sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/textView6"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="0dp"
                            android:fontFamily="@font/didact_gothic"
                            android:text="Click here to read famous article on better parenting!"
                            android:textColor="@color/colorWhite"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/textView8"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="0dp"
                            android:fontFamily="@font/didact_gothic"
                            android:text="Stay Home and Stay Safe"
                            android:textColor="@color/colorWhite"
                            android:textSize="12sp"
                            android:textStyle="bold" />


                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</RelativeLayout>


