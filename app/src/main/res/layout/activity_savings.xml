<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DBC0F3"
    tools:context=".GeneralActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarsavings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFFFF"
        android:elevation="1dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:navigationIcon="@drawable/backicon"
        app:subtitleTextAppearance="@style/TextAppearance.AppCompat.Display3"
        app:title="h e e d"
        app:titleMargin="8dp"
        app:titleMarginEnd="20dp"
        app:titleMarginStart="276dp"
        app:titleTextAppearance="@style/TextAppearance.AppCompat.Small"
        app:titleTextColor="#F7646666">

    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/relmain"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:elevation="40dp"
            app:cardCornerRadius="30dp"
            app:cardPreventCornerOverlap="false">

            <RelativeLayout
                android:id="@+id/rel1"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:padding="10dp">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginEnd="66dp"
                    android:fontFamily="@font/didact_gothic"
                    android:text="Savings tips:"
                    android:textColor="#757575"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView2"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/didact_gothic"
                    android:text="Being financially backward is normal during pandemic for most of the people. But there are lots of ways to still survive this pandemic. Here are few tips for for piggy savings."
                    android:textColor="@color/colorskip"
                    android:textSize="17dp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="230dp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="1dp"


            android:fillViewport="false">

            <LinearLayout
                android:id="@+id/linerlayout"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:touchscreenBlocksFocus="false"

                app:layout_constraintTop_toTopOf=""
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                >

                <androidx.cardview.widget.CardView
                    android:id="@+id/investcard"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:elevation="2dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="40dp"
                    app:cardPreventCornerOverlap="false">

                    <RelativeLayout
                        android:layout_width="179dp"
                        android:layout_height="181dp"
                        android:layout_margin="1dp">

                        <ImageView
                            android:id="@+id/investimg"
                            android:layout_width="wrap_content"
                            android:layout_height="91dp"
                            android:layout_centerVertical="false"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="10dp"
                            app:srcCompat="@drawable/invest" />

                        <TextView
                            android:id="@+id/investtxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/investimg"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="3dp"
                            android:fontFamily="@font/didact_gothic"
                            android:text="Invest in Stocks"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/onlinebuscard"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:elevation="2dp"
                    app:cardCornerRadius="40dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp">

                        <ImageView
                            android:id="@+id/busimg"
                            android:layout_width="141dp"
                            android:layout_height="105dp"
                            android:layout_alignParentEnd="false"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="false"
                            android:layout_marginTop="20dp"
                            app:srcCompat="@drawable/onlinebusiness" />

                        <TextView
                            android:id="@+id/bustxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/busimg"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="3dp"
                            android:fontFamily="@font/didact_gothic"
                            android:text="Online Business"
                            android:textStyle="bold" />
                    </RelativeLayout>


                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linerlayout1"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_below="@id/linerlayout"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="10dp"
                android:touchscreenBlocksFocus="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linerlayout">

                <androidx.cardview.widget.CardView
                    android:id="@+id/unwantedsubscard"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:elevation="2dp"
                    app:cardCornerRadius="40dp"
                    app:cardPreventCornerOverlap="false">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp">

                        <ImageView
                            android:id="@+id/unwantedsubsimg"
                            android:layout_width="wrap_content"
                            android:layout_height="91dp"
                            android:layout_centerVertical="false"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="10dp"
                            app:srcCompat="@drawable/free_cancellation_01" />

                        <TextView
                            android:id="@+id/unwantedsubstxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/unwantedsubsimg"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="3dp"
                            android:fontFamily="@font/didact_gothic"
                            android:text="Unwanted Subscriptions"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/trimcard"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:elevation="3dp"
                    app:cardCornerRadius="40dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp">

                        <ImageView
                            android:id="@+id/trimimg"
                            android:layout_width="148dp"
                            android:layout_height="112dp"
                            android:layout_alignParentEnd="false"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="false"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="0dp"
                            app:srcCompat="@drawable/expenses" />

                        <TextView
                            android:id="@+id/trimtxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/trimimg"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="3dp"
                            android:fontFamily="@font/didact_gothic"
                            android:text="Trim expenses"
                            android:textStyle="bold" />
                    </RelativeLayout>


                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linerlayout2"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_below="@id/linerlayout1"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linerlayout1">

                <androidx.cardview.widget.CardView
                    android:id="@+id/savingreadcard"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_margin="10dp"
                    android:background="#C8DD5858"
                    android:hapticFeedbackEnabled="true"
                    app:cardBackgroundColor="#AF89F0"
                    app:cardCornerRadius="10dp"
                    android:layout_marginStart="20dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="20dp">

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="80dp"
                            android:fontFamily="@font/didact_gothic"
                            android:scrollbarSize="10dp"
                            android:text="Read More?"
                            android:textSize="25sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/textView6"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="0dp"
                            android:fontFamily="@font/didact_gothic"
                            android:text="Click here to read famous article on savings!"
                            android:textColor="@color/colorWhite"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/textView8"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="0dp"
                            android:fontFamily="@font/didact_gothic"
                            android:text="Stay Home and Stay Safe"
                            android:textColor="@color/colorWhite"
                            android:textSize="12sp"
                            android:textStyle="bold" />


                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</RelativeLayout>


